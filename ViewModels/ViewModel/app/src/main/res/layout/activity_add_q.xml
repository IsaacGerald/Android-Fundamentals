<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="@string/add_a_question"/>

        <EditText
            android:id="@+id/q_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="18sp"
            android:gravity="start"
            android:background="@drawable/edit_text_border"
            android:hint="@string/enter_your_question"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textAlignment="textStart" />
        <Button
            android:id="@+id/add_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="Add"/>

        <EditText
            android:id="@+id/ans_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"
            android:hint="Your Answer" />
        <Button
            android:id="@+id/add_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="Add All"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="Edit Question"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/q_editText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="18sp"
            android:gravity="start"
            android:background="@drawable/edit_text_border"
            android:hint="@string/enter_your_question"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textAlignment="textStart" />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="@string/save"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
