<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.customview.CustomView
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/customView_height"
        app:square_color="@color/squareColor"
        app:square_size="100dp"
        app:circle_color="@color/circleColor"/>

    <Button
        android:id="@+id/btn_swap_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customView"
        android:layout_marginLeft="10dp"
        android:text="Swap Color" />


</RelativeLayout>